<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DevEnvAzure.ReportsPage" Title="Reports">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Padding="10">
            <Button Text="Safety Report" TextColor="Black" FontSize="Medium" Clicked="Button_Clicked" BackgroundColor="#FDCE02" />
            <Button Text="Security Report" TextColor="Black"  FontSize="Medium" Clicked="Security_Clicked" BackgroundColor="#FDCE02" />
            <Button Text="Cabin Safety Report" TextColor="Black" FontSize="Medium" Clicked="CabinSafety_Clicked" BackgroundColor="#FDCE02" />
            <Button Text="Fatigue Report" TextColor="Black" FontSize="Medium" Clicked="Fatigue_Clicked" BackgroundColor="#FDCE02" />
            <Button Text="Ground Safety Report" TextColor="Black" FontSize="Medium" Clicked="GroundSafety_Clicked" BackgroundColor="#FDCE02" />
            <Button Text="Injury Illness Report" TextColor="Black" FontSize="Medium" Clicked="InjuryIllness_Clicked" BackgroundColor="#FDCE02" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>